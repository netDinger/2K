<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.2K" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>


    <style	name="Theme.2K.AppBarOverlay"	parent="ThemeOverlay.AppCompat.DayNight.ActionBar"/>
    <style	name="Theme.2K.PopupOverlay"	parent="ThemeOverlay.AppCompat.DayNight"/>
</resources>