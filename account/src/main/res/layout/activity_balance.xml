<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context=".presentation.view.Activity_Balance">

    <TextView
        android:id="@+id/balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/balance"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/balance"
        android:layout_below="@id/balance_text"
        android:layout_marginTop="7dp"
        android:textSize="16sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/balance"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp"
        android:padding="7dp"
        android:text="@string/deposit" />

    <Button
        android:id="@+id/withdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:padding="7dp"
        android:layout_below="@id/balance"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:text="@string/withdraw"/>


    <TextView
        android:id="@+id/helpBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/withdraw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:padding="7dp"
        android:text="@string/helpBalance" />

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helpBalance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="CODE 123"/>




</RelativeLayout>