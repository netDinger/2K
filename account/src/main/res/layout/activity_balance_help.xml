<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.Activity_Balance_Help"
    >
    <include
        android:id="@+id/appbar"
        layout="@layout/item_app_bar_account"/>


  <ScrollView
      android:layout_below="@id/appbar"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp"
        >

      <TextView
          android:id="@+id/deposit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/helpDeposit"
          android:textSize="16sp"
          android:textStyle="bold"
          />

      <TextView
          android:id="@+id/depositText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/deposit"
          android:layout_marginTop="7dp"
          android:text="@string/depositText"
          />

      <TextView
          android:id="@+id/withdraw"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/depositText"
          android:layout_marginTop="21dp"
          android:text="@string/helpWithdraw"
          android:textSize="16sp"
          android:textStyle="bold"
          />

      <TextView
          android:id="@+id/withdrawText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/withdraw"
          android:layout_marginTop="7dp"
          android:text="@string/withdrawText"
          />

    </RelativeLayout>

  </ScrollView>
</RelativeLayout>