<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.Activity_About">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="21dp"/>

        <TextView
            android:id="@+id/app_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="@string/app_name"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_Name"
            android:layout_centerHorizontal="true"
            android:text="@string/about_app"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_text"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/contact_phone"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/viber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/contact_viber"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viber"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/contact_facebook"
            android:textSize="14sp" />

        <Button
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/share"
            android:layout_below="@id/facebook"
            android:layout_marginTop="21dp"
            android:layout_centerHorizontal="true"
            android:text="@string/share"/>


    </RelativeLayout>
</ScrollView>